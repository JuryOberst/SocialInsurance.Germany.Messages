<?xml version="1.0" encoding="utf-8" ?>
<beanio xmlns="http://www.beanio.org/2015/06">
  <template name="DBME">
    <field name="Kennung" length="4" literal="DBME" required="true"/>
    <field name="KennzeichenStorno" length="1" regex="[J]|[N]" required="true"/>
    <field name="KennzeichenGleitzone" length="1" regex="[0-2]" required="true"/>
    <field name="ZeitraumBeginn" length="8" required="true" format="yyyyMMdd"/>
    <field name="ZeitraumEnde" length="8" required="true" format="yyyyMMdd"/>
    <field name="Zahltage" length="2" required="true"/>
    <field name="Währungskennzeichen" length="1" required="true"/>
    <field name="Entgelt" length="6" required="true"/>
    <field name="Beitragsgruppe" length="4" required="true"/>
    <field name="Tätigkeitsschlüssel" length="9" required="true"/>
    <field name="KennzeichenRechtskreis" length="1" required="true" regex="[W]|[O]"/>
    <field name="KennzeichenMehrfach" length="1" required="true" regex="[J]|[N]"/>
    <field name="Intern" length="1" required="true"/>
    <field name="Reserve" length="100" required="true"/>
  </template>
</beanio>